<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.aptech.warehousemobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="2HAT Warehouse"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WarehouseMobile"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ScannerActivity"
            android:exported="false" />
        <activity
            android:name=".GoodsDetailActivity"
            android:exported="false"
            android:label="Goods Details"
            android:parentActivityName=".GoodsActivity" />
        <activity
            android:name=".GoodsActivity"
            android:exported="false"
            android:label="Goods List"
            android:parentActivityName=".ViewActivity" />
        <activity
            android:name=".MovementActivity"
            android:exported="false"
            android:label="Movement Report"
            android:parentActivityName=".ViewActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".IssueOrderDetailActivity"
            android:exported="false"
            android:label="Issue Order Detail"
            android:parentActivityName=".IssueOrderActivity" />
        <activity
            android:name=".IssueOrderActivity"
            android:exported="false"
            android:label="Issue Order"
            android:parentActivityName=".ViewActivity" />
        <activity
            android:name=".AllocateDetailActivity"
            android:exported="false"
            android:label="Allocate Detail"
            android:parentActivityName=".AllocateActivity" />
        <activity
            android:name=".AllocateActivity"
            android:exported="false"
            android:label="Allocate Report"
            android:parentActivityName=".ViewActivity" />
        <activity
            android:name=".ViewActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.MyFirebaseMessageService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>